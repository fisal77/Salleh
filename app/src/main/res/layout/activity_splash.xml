<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seniorproject.sallemapp.Activities.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_marginTop="100dp"
        android:layout_weight="2" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_vision"
            android:textColor="@color/sallemBlue"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="150dp"
            android:layout_weight="4"
            android:textSize="@dimen/app_vision_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading_msg"
        android:textColor="@color/sallemBlue"
        android:layout_marginTop="75dp"
        android:gravity="top|center"
        android:textSize="@dimen/loading_msg_text_size"
        android:layout_weight="4"
        />

</LinearLayout>
