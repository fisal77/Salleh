<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/img_friend_avatar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:adjustViewBounds="true"
      android:cropToPadding="true"
      android:minHeight="55dp"
      android:minWidth="55dp"
      app:srcCompat="@drawable/ic_account_circle_black_24dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintVertical_bias="0.015" />

  <TextView
      android:id="@+id/lbl_friend_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/img_friend_avatar"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="4dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_toEndOf="@+id/img_friend_avatar"
      android:layout_toRightOf="@+id/img_friend_avatar"
      android:ems="16"
      android:text="TextView"
      android:textColor="@color/sallemBlack"
      app:layout_constraintBottom_toBottomOf="@+id/img_friend_avatar"
      app:layout_constraintLeft_toRightOf="@+id/img_friend_avatar"
      app:layout_constraintTop_toTopOf="@+id/img_friend_avatar"
      tools:textColor="@color/sallemBlack" />


</android.support.constraint.ConstraintLayout>