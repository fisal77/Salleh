<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/friendRequests_lblUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textColor="@color/sallemBlack"
        app:layout_constraintLeft_toRightOf="@+id/friendRequests_imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/friendRequests_imgAvatar" />

    <ImageView
        android:id="@+id/friendRequests_imgAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/friendRequests_btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sallemBlue"
        android:text="Accept"
        android:textColor="@color/sallemWhite"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/friendRequests_lblUserName"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/friendRequests_lblUserName"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/friendRequests_btnDecline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sallemBlue"
        android:text="Decline"
        android:textColor="@color/sallemWhite"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/friendRequests_btnAccept"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="@+id/friendRequests_btnAccept"
        android:layout_marginStart="11dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/borderColor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friendRequests_btnAccept" />

</android.support.constraint.ConstraintLayout>
